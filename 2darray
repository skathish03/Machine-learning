sum by rowwise and column wise
#include <stdio.h>

int main()
{
    int a[3][3]={{1,2,3},{4,5,6},{7,8,9}};
    int row[3]={0,0,0};
    int col[3]={0,0,0};
    for(int r=0;r<3;r++){
        for(int c=0;c<3;c++){
            col[r]+=a[r][c];
            row[c]+=a[r][c];
        }
    }
    printf("%d ",col[1]);
    return 0;
}
